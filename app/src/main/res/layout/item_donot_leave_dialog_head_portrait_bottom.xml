<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44.5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="#cfcfcf"/>
    <View
        android:id="@+id/line_divider"
        android:layout_centerInParent="true"
        android:background="#cfcfcf"
        android:layout_width="0.5dp" android:layout_height="30dp"/>
    <Button
        android:id="@+id/btn_already_regist_cancle_up_load"
        android:layout_toLeftOf="@id/line_divider"
        android:text="退出登录"
        android:textColor="#808080"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_login_rightnow_up_load"
        android:layout_toRightOf="@id/line_divider"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="#00000000"
        android:text="继续上传"
        android:textColor="#e1b72d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>