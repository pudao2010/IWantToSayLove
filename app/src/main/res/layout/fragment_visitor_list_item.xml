<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/fl_user_info"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp">
            <ImageView
                android:id="@+id/iv_red_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/red_point_shape"
                android:visibility="invisible"/>

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/iv_lock"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/fragment_heart_beat_icon_lock"/>
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#cccccc"
            android:text="3小时前"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:id="@+id/ll_user_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fl_user_info"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青叶子"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#808080"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:text="觉得对你很棒，对你心动"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_not_vip_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fl_user_info"
            android:text="查看了你的资料"
            android:gravity="center_vertical"
            android:textColor="#3a3a3a"
            android:textSize="14sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fragment_heart_beat_list_divider"/>
</LinearLayout>




















