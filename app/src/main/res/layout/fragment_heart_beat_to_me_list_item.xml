<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/fl_user_info"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp">
            <ImageView
                android:id="@+id/iv_red_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/red_point_shape"
                android:visibility="invisible"/>

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/iv_lock"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/fragment_heart_beat_icon_lock"/>
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#cccccc"
            android:text="3小时前"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fl_user_info"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青叶子"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#808080"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:text="觉得对你很棒，对你心动"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_message_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="63dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fragment_heart_beat_list_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/iv_message_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/fragment_heart_beat_icon_video"/>
            </FrameLayout>
            
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="【前任邀请你参加婚礼，你会是什么反应？】"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fragment_heart_beat_list_divider"/>
</LinearLayout>




















