<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/fragment_visitor_icon_empty" />

    <TextView
        android:id="@+id/tv_empty_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fragment_visitor_empty_data_tips_1"
        android:textColor="@color/fragment_visitor_empty_data_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_empty_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fragment_visitor_empty_data_tips_2"
        android:textColor="@color/fragment_visitor_empty_data_text"
        android:textSize="15sp" />
</LinearLayout>