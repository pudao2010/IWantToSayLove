<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <com.bluewhaledt.saylove.base.widget.tablayout.SegmentTabLayout
            android:id="@+id/tabs_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tl_tab_space_equal="true"
            app:tl_textsize="15sp"
            app:tl_textSelectColor="@color/black"
            app:tl_textUnselectColor="#808080"
            app:tl_bar_stroke_color="@color/white"
            app:tl_indicator_bounce_enable="false"
            app:tl_indicator_corner_radius="0dp"
            app:tl_indicator_color="#e8c77a"
            app:tl_indicator_height="2dp"
            app:tl_indicator_margin_top="42dp"
            app:tl_indicator_anim_enable="true"
            app:tl_indicator_anim_duration="150"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#1a000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#1a000000"/>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>