<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_pay_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_limit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:textSize="15sp"
            android:text="12个月"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/activity_pay_vip_padding_left" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="488"
            android:textColor="@color/color_f0cf62"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="元"
            android:textColor="@color/black"
            android:layout_marginLeft="6dp" />

        <LinearLayout
            android:id="@+id/ll_average_per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="日均仅"
                android:textColor="#808080"
                android:layout_marginLeft="6dp" />
            <TextView
                android:id="@+id/tv_average_per_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="1.1"
                android:textColor="@color/color_f0cf62"
                android:layout_marginLeft="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="元"
                android:textColor="#808080"
                android:layout_marginLeft="2dp" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/btn_purchase"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@color/black"
            android:textColor="@color/color_f0cf62"
            android:layout_marginRight="20dp"
            android:textSize="14sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_pay_divider"/>
</LinearLayout>
