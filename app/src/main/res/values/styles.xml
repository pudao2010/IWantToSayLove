    <!--注册登录输入框基本样式-->
    <style name="CommonEditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:textCursorDrawable">@drawable/vertical_moulding_shape</item>
        <item name="met_clearButton">true</item>
        <item name="met_underlineColor">#cccccc</item>
        <item name="met_primaryColor">#cccccc</item>
        <item name="clear_icon">@drawable/icon_register_delete</item>
    </style>

</resources>
